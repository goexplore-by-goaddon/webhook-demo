{
	"tasks": {
		"method": "get",
		"url": "https://api.your-backend.com/tasks/{{ id }}?company_id={{ company_id }}",
		"headers": {
			"Content-Type": "application/json"
		}
	},
	"update_task": {
		"method": "patch",
		"url": "https://api.your-backend.com/tasks/{{ id }}",
		"headers": {
			"Content-Type": "application/json"
		},
		"body": {
			"name": "{{ name }}"
		}
	}
}