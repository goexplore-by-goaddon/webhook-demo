{
  "tasks": {
    "method": "get",
    "url": "http://0.0.0.0:3005/tasks/{{ _id }}.json",
    "headers": {
      "Authorization": "{{ token }}",
      "Content-Type": "application/json"
    }
  },
  "update_task": {
    "method": "patch",
    "url": "http://0.0.0.0:3005/tasks/{{ _id }}.json",
    "headers": {
      "Authorization": "{{ token }}",
      "Content-Type": "application/json"
    },
    "body": {
      "name": "{{ name }}"
    }
  }
}